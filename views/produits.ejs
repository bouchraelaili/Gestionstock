<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>inventory management</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
</head>

<body>

    
        
    <h1>Produit</h1>
   


        <table id="myTable" >  
            <thead>  
                <tr class="table100-head">  
                    <th class="column">Id</th>  
                    <th class="column">Nom du produit</th>  
                    <th class="column">Quantit√©</th>  
                    <th class="column">Prix</th>  
                    <th class="column">Fournisseur</th>  
                    <th class="column">Rayon</th>  
                    <th style="width: 80px;" class="column"> Action</th>  
                    <th style="width: 50px;" class="column"></th>  



                </tr>  
            </thead>  
             <tbody>  
             <% produits.forEach(function (prod) { %>
                <tr>  
                    <td class="column"><%= prod.id %> </td>  
                    <td class="column"><%= prod.nom %></td>  
                    <td class="column"><%= prod.quantite %></td>
                    <td class="column"><%= prod.prix %></td>
                    <td class="column"><%= prod.nomfour %></td>
                    <td class="column"><%= prod.categorie %></td>
                   
                    <td><a href="/updateproduct/<%= prod.id %> "class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Modifier</a> </td>
 <td><a href="/delete/<%= prod.id %>" class= "btn btn-outline-warning btn-lg active" role="button" aria-pressed="true">Supprimer</a>
                    </td>
                </tr>
                                                   
             <% }) %>
             </tbody>
        </table>  
        <br><br>
        <div class="form-group">
       
            <a style="margin-right: 300px;width: 150px; background-color: #833471;color: white;" type="button" href="/addprod" class="btn btn-outline-dark"> Ajouter Produit</a> 
              <a style="margin-right: 280px; width: 150px;background-color: #833471;color: white;" type="button" href="/fournisseur"  class="btn btn-outline-dark">Fournisseur</a> 
            <a  style=" width: 150px;background-color: #833471;color: white;"type="button" href="/rayon"  class="btn btn-outline-dark">Rayon</a>
    
        </div>
        
       





        


</body>

</html>