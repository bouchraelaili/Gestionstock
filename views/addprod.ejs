<body>
    
    <h1>Ajouter Produit</h1>
    <div class="form">

        <form method="POST" action="/addprod" class="form">
            <div class="form-group">
                <label>Nom du Produit</label>
                <input placeholder="nom" name="nom" class="input" id="nom" type="text"  required>
            </div>

            <div class="form-group">
                <label>Quantit√©</label>
                <input placeholder="quantite" name="quantite" class="input" id="prenom" type="number" required>
            </div>
            <div class="form-group">
                <label>Prix</label>
                <input placeholder="prix" name="prix" class="input" id="age" type="number" required> 
            </div>

            <div class="form-group"  style="padding-left: 160px;;">
                <label>Fournisseur:</label>
                <select name="four" class="input" required>
                    <% fournisseurs.forEach(function (four) { %>

                    <option > <%= four.nomfour %> </option>
                    <% }) %>
                </select>
                <a class="A" href="/addfourn">Ajouter Fournisseur</a>
            </div>

            <div class="form-group" style="padding-left: 160px;;">
                <label>Rayon</label>
                <select name="categ" class="input" required>
                    <% rayons.forEach(function (ray) { %>

                    <option> <%= ray.categorie %> </option>

                    <% }) %>
                </select>
                <a class="A" href="/addcat">Ajouter rayon</a>

            </div>


            <input class="A" type="submit" value="Ajouter">

        </form>
        <a style="margin-top: 10px;" type="button" href="/"  class="A">Produit</a>
        <a style="margin-top: 10px;" type="button" href="/fournisseur"  class="A">Fournisseur</a>
        <a style="margin-top: 10px; margin-bottom: 10px;" type="button" href="/rayon"  class="A">Rayon</a>
    </div>






</body>

</html>